@page "/"
@using SmartMeterApp.Components

<PageTitle>Home</PageTitle>

<AuthorizeComponent
	UserAction="@userAction"
	OnUserActionChanged="ToggleUserActionState">
</AuthorizeComponent>

@code{
	private UserActions userAction = UserActions.Login;

	private void ToggleUserActionState()
	{
		if(userAction == UserActions.Login)
		{
			userAction = UserActions.Register;
		}
		else
		{
			userAction = UserActions.Login;
		}
	}
}